            <CellNode cell_type="code" classes="cell">
                <CellInputNode classes="cell_input">
                    <literal_block xml:space="preserve">
                        import sympy as sym
                        f = sym.Function('f')
                        y = sym.Function('y')
                        n = sym.symbols(r'\alpha')
                        f = y(n)-2*y(n-1/sym.pi)-5*y(n-2)
                        glue("sym_eq", sym.rsolve(f,y(n),[1,4]))
